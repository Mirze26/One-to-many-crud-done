@model News


@{
    ViewData["Title"] = "Detail";
}




<div style="padding-left:300px" class="container my-5">

     <h4>Image</h4>
    <img style="width:100px" src="~/images/@Model.Image" />

    <h4>Title</h4>
    <p>@Model.Title</p>
    <h4>Author Name</h4>
    <p>@Model.Author</p
    <h4>Date</h4>
    <p>@Model.PublishDate</p>
   


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>

</div>
